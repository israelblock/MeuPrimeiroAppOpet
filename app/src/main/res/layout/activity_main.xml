<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.opet.meuprimeiroappopet.MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite seu nome aqui"
        android:inputType="text"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/checkOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecionar" />

    <Spinner
        android:id="@+id/spinnerFrutas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/frutas"
        android:spinnerMode="dialog" />

    <Button
        android:onClick="clique"
        android:id="@+id/btnClique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clique Aqui" />

    <Button
        android:onClick="clique"
        android:id="@+id/btnClique2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

</LinearLayout>
